@page "/Instrument/CheckListWeekly/Weekly"
@inject IJSRuntime jsRuntime
<div class="row margin-row-card">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                ระบบวิเคราะห์รังสีแกมมาสเปคโตรเมทรี  (HPGe Detector)
                <img class="img-qrcode float-right" src="assets/images/img-qrcode/qr-code.png">
            </div>
            <div class="card-body">
                <form method="post" action="">
                    <div class="row">
                        <div class="col-lg-6 col-xl-6">
                            <div class="row">
                                <label class="col-12 col-md-6 col-lg-5 col-form-label">
                                    Date
                                </label>
                                <div class="col-12 col-md-6 col-lg-5">
                                    <div class="input-group input-box-bottom">
                                        <input type="date" class="form-control" name="Date" id="Date" placeholder="Date" autocomplete="off" autofocus>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-xl-6">
                            <div class="row">
                                <label class="col-12 col-md-6 col-lg-12 col-form-label">
                                    Instrument Number: INS63-0005
                                </label>
                            </div>
                            <div class="row">
                                <label class="col-12 col-md-6 col-lg-12 col-form-label">
                                    Serial Number: 59-TP51888B
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-xl-6">
                            <div class="row">
                                <label class="col-12 col-md-6 col-lg-5 col-form-label">
                                    สภาพภายนอกพร้อมใช้งาน
                                </label>
                                <div class="col-12 col-md-6 col-lg-5 checklist">
                                    <span>
                                        <input class="form-check-input" type="checkbox" value="" name="CalibrationPass" id="CalibrationPass">
                                        <label class="form-check-label">
                                            Pass
                                        </label>
                                    </span>
                                    <span class="margin-checklist-fail">
                                        <input class="form-check-input" type="checkbox" value="" name="CalibrationPass" id="CalibrationPass">
                                        <label class="form-check-label">
                                            Fail
                                        </label>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-xl-6">
                            <div class="row">
                                <div class="col-12 col-md-6 col-lg-5">
                                    <div class="input-group input-box-bottom">
                                        <input type="text" class="form-control" name="Detail" id="Detail" placeholder="" autocomplete="off" autofocus>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 col-lg-5">
                                    <div class="input-group input-box-bottom">
                                        <InputFile class="form-control" name="Picture" id="Picture"  multiple/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-xl-6">
                            <div class="row">
                                <label class="col-12 col-md-6 col-lg-5 col-form-label">
                                    เติม Liquid Nitrogen
                                </label>
                                <div class="col-12 col-md-6 col-lg-5 checklist">
                                    <span>
                                        <input class="form-check-input" type="checkbox" value="" name="CalibrationPass" id="CalibrationPass">
                                        <label class="form-check-label">
                                            Pass
                                        </label>
                                    </span>
                                    <span class="margin-checklist-fail">
                                        <input class="form-check-input" type="checkbox" value="" name="CalibrationPass" id="CalibrationPass">
                                        <label class="form-check-label">
                                            Fail
                                        </label>
                                    </span>

                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-xl-6">
                            <div class="row">
                                <div class="col-12 col-md-6 col-lg-5">
                                    <div class="input-group input-box-bottom">
                                        <input type="text" class="form-control" name="Detail" id="Detail" placeholder="" autocomplete="off" autofocus>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 col-lg-5">
                                    <div class="input-group input-box-bottom">
                                        <InputFile class="form-control" name="Picture" id="Picture" multiple />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="text-center">
            <a href="Instrument/CheckList" class="btn btn-warning margin-btn">Back Previous</a>
            <button type="submit" class="btn btn-warning margin-btn" name="Report" id="Report">Report</button>
            <button type="submit" class="btn btn-warning margin-btn" name="SaveWeekly" id="SaveWeekly">Save</button>
            <button type="reset" class="btn btn-warning margin-btn" name="Clear" id="Clear">Clear</button>
        </div>
    </div>
</div>
@code {
    protected override void OnInitialized()
    {
        ((IJSInProcessRuntime)jsRuntime).InvokeVoid("clearURL");
    }
}
