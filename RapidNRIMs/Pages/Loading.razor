@layout LoginLayout
@page "/"
@inject NavigationManager NavigationManager
@inherits LogoBase
@inject IJSRuntime jsRuntime
<div class="container">
    <div class="row style-justify mt-5">
        <div class="col-lg-12">
            <div id="app" class="registration-form">
                <form>
                    <div class="form-icon">
                        @if(logoEPR != "")
                        {
                            <img class="form-icon" src="@($"{connect["nurl"]}{connect["nurlFileLogo"]}{logoEPR}")">
                        }
                    </div>

                    <div class="form-group text-center">
                        <div class="text-center pt-3" style="font-size: 16pt">
                            Loading...
                        </div>
                        <div class="text-center mt-3">
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"
                                  style="font-size: 16pt; width: 36px; height: 36px; color: Gold"></span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@code {
    

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var timer = new Timer(new TimerCallback(_ =>
            {
                InvokeAsync(() =>
                {
                    StateHasChanged();
                });
            }), null, 10000, Timeout.Infinite);

            NavigationManager.NavigateTo("/Accounting/Login");
            await jsRuntime.InvokeVoidAsync("clearURL");
        }
    }

}