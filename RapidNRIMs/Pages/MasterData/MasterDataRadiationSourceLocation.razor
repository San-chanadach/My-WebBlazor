@code {

    /// <summary>
    /// RadiationSourceLocation
    /// </summary>
    private List<RadiationSourceLocation> listRadiationSourceLocation = new List<RadiationSourceLocation>();
    private RadiationSourceLocation addRadiationSourceLocation = new RadiationSourceLocation();
    private RadiationSourceLocation editRadiationSourceLocation = new RadiationSourceLocation();


    /// <summary>
    /// BSModal
    /// </summary>
    BSModal Load { get; set; }
    BSModal ModalResponseError { get; set; }
    BSModal ModalRespondSuccess { get; set; }
    BSModal ModalRadiationSourceLocationCreate { get; set; }
    BSModal ModalRadiationSourceLocationEdit { get; set; }
    BSModal ModalRadiationSourceLocationDelete { get; set; }

    /// <summary>
    /// Variable
    /// </summary>
    private string RequertMessage;

    /// <summary>
    /// OnInitializedAsync
    /// </summary>
    /// <returns></returns>
    protected override async Task OnInitializedAsync()
    {
        try
        {
            AppData.radiationSourceLocations = await _masterData.GetMasterDataAsync<RadiationSourceLocation>("RadiationSourceLocation");
            listRadiationSourceLocation = AppData.radiationSourceLocations;
            // await jsRuntime.InvokeAsync<object>("ThisDataTablesAdd");
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
        }
    }

    /// <summary>
    /// Modal show RadiationSourceLocationUpdate
    /// </summary>
    /// <param name="id"></param>
    private async void RadiationSourceLocationUpdate(int id)
    {
        try
        {
            var respond = await _masterData.GetMasterDataAsyncByID<RadiationSourceLocation>("RadiationSourceLocationByID", id);
            if (string.IsNullOrEmpty(respond.Content))
            {
                editRadiationSourceLocation = respond;
                ModalRadiationSourceLocationEdit.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }

            //editRadiationSourceLocation = listRadiationSourceLocation.Find(l => l.RadiationSourceLocationID == id);
            //ModalRadiationSourceLocationEdit.Show();

        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        } 
    }

    /// <summary>
    /// Modal show RadiationSourceLocationDelete
    /// </summary>
    /// <param name="id"></param>
    private async void RadiationSourceLocationDelete(int id)
    {
        try
        {
            var respond = await _masterData.GetMasterDataAsyncByID<RadiationSourceLocation>("RadiationSourceLocationByID", id);

            if (string.IsNullOrEmpty(respond.Content))
            {
                editRadiationSourceLocation = respond;
                ModalRadiationSourceLocationDelete.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }

            //editRadiationSourceLocation = listRadiationSourceLocation.Find(l => l.RadiationSourceLocationID == id);
            //ModalRadiationSourceLocationDelete.Show();

        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
    }

    /// <summary>
    /// SaveCreateRadiationSourceLocation
    /// </summary>
    private async Task SaveCreateRadiationSourceLocation()
    {
        try
        {
            var respond = await _masterData.PostMasterDataAsync("PostRadiationSourceLocation", addRadiationSourceLocation);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }

        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalRadiationSourceLocationCreate.Hide();
    }

    /// <summary>
    /// SaveEditRadiationSourceLocation
    /// </summary>
    private async Task SaveEditRadiationSourceLocation()
    {
        try
        {
            var respond = await _masterData.PutMasterDataAsync("PutRadiationSourceLocation", editRadiationSourceLocation, editRadiationSourceLocation.RadiationSourceLocationID);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalRadiationSourceLocationEdit.Hide();
    }

    /// <summary>
    /// SaveDeleteRadiationSourceLocation
    /// </summary>
    private async Task SaveDeleteRadiationSourceLocation()
    {
        try
        {
            var respond = await _masterData.DeleteMasterDataAsync<RadiationSourceLocation>("DeleteRadiationSourceLocation", editRadiationSourceLocation.RadiationSourceLocationID);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalRadiationSourceLocationDelete.Hide();
    }

    /// <summary>
    /// ClearCreateRadiationSourceLocation
    /// </summary>
    private void ClearCreateRadiationSourceLocation()
    {
        addRadiationSourceLocation = new RadiationSourceLocation();
    }

}
