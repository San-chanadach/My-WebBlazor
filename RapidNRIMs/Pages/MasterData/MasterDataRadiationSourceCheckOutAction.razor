@code {

    /// <summary>
    /// RadiationSourceCheckOutAction
    /// </summary>
    private List<RadiationSourceCheckOutAction> listRadiationSourceCheckOutAction= new List<RadiationSourceCheckOutAction>();
    private RadiationSourceCheckOutAction addRadiationSourceCheckOutAction = new RadiationSourceCheckOutAction();
    private RadiationSourceCheckOutAction editRadiationSourceCheckOutAction = new RadiationSourceCheckOutAction();


    /// <summary>
    /// BSModal
    /// </summary>
    BSModal Load { get; set; }
    BSModal ModalResponseError { get; set; }
    BSModal ModalRespondSuccess { get; set; }
    BSModal ModalRadiationSourceCheckOutActionCreate { get; set; }
    BSModal ModalRadiationSourceCheckOutActionEdit { get; set; }
    BSModal ModalRadiationSourceCheckOutActionDelete { get; set; }

    /// <summary>
    /// Variable
    /// </summary>
    private string RequertMessage;

    /// <summary>
    /// OnInitializedAsync
    /// </summary>
    /// <returns></returns>
    protected override async Task OnInitializedAsync()
    {
        try
        {
            AppData.radiationSourceCheckOutActions = await _masterData.GetMasterDataAsync<RadiationSourceCheckOutAction>("RadiationSourceCheckOutAction");
            listRadiationSourceCheckOutAction = AppData.radiationSourceCheckOutActions;
            //await jsRuntime.InvokeAsync<object>("ThisDataTablesAdd");
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
        }
    }

    /// <summary>
    /// Modal show RadiationSourceCheckOutActionUpdate
    /// </summary>
    /// <param name="id"></param>
    private async void RadiationSourceCheckOutActionUpdate(int id)
    {
        try
        {
            var respond = await _masterData.GetMasterDataAsyncByID<RadiationSourceCheckOutAction>("RadiationSourceCheckOutActionByID", id);
            if (string.IsNullOrEmpty(respond.Content))
            {
                editRadiationSourceCheckOutAction = respond;
