        try
        {
            var respond = await _masterData.DeleteMasterDataAsync<RadiationSourceCheckOutAction>("DeleteRadiationSourceCheckOutAction", editRadiationSourceCheckOutAction.RadiationSourceCheckOutActionID);
            if (!string.IsNullOrEmpty(respond.ToString()))
