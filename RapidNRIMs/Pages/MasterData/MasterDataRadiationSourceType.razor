<!--ModalRadiationSourceTypeDelete-->
<BSModal @ref="ModalRadiationSourceTypeDelete">
    <BSModalHeader OnClick="@(() => ModalRadiationSourceTypeDelete.Hide())">@AppData.LangResource[AppData.LanguageID, 383]</BSModalHeader>
    <BSModalBody>

        <div class="row">
            <div class="col-md-12">
                <div class="alert-modal-delete">
