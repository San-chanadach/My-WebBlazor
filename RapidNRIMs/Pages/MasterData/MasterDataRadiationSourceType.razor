<!--ModalResponseError-->
<BSModal Class="text-center" @ref="ModalResponseError" IsCentered="true" Size="Size.Large">
    <BSModalBody>
        <div class="row">
            <div class="col-md-12 alert-modal-logo">
                <img src="assets/images/img-common/delete_symbol.png" width="100" height="100" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p class="alert-modal">@RequertMessage</p>
            </div>
        </div>
        <button type="button" @onclick="@(() => ModalResponseError.Hide())" class="btn btn-success alert-modal-button">@AppData.LangResource[AppData.LanguageID, 330]</button>
    </BSModalBody>
</BSModal>

<!--ModalRespondSuccess-->
<BSModal Class="text-center alert-modal-body" @ref="ModalRespondSuccess" IsCentered="true" Size="Size.Large">
    <BSModalBody>
        <div class="row">
            <div class="col-md-12 alert-modal-logo">
                <img src="assets/images/img-common/tick_symbol.png" width="100" height="100" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h4 class="alert-modal">@RequertMessage</h4>
            </div>
        </div>
        <button type="button" @onclick="@(() => ModalRespondSuccess.Hide())" class="btn btn-success alert-modal-button">@AppData.LangResource[AppData.LanguageID, 330]</button>
    </BSModalBody>
</BSModal>


@code {

    /// <summary>
    /// RadiationSourceType
    /// </summary>
    private List<RadiationSourceType> listRadiationSourceType = new List<RadiationSourceType>();
    private RadiationSourceType addRadiationSourceType = new RadiationSourceType();
    private RadiationSourceType editRadiationSourceType = new RadiationSourceType();


    /// <summary>
    /// BSModal
    /// </summary>
    BSModal Load { get; set; }
    BSModal ModalResponseError { get; set; }
    BSModal ModalRespondSuccess { get; set; }
    BSModal ModalRadiationSourceTypeCreate { get; set; }
    BSModal ModalRadiationSourceTypeEdit { get; set; }
    BSModal ModalRadiationSourceTypeDelete { get; set; }

    /// <summary>
    /// Variable
    /// </summary>
    private string RequertMessage;

    /// <summary>
    /// OnInitializedAsync
    /// </summary>
    /// <returns></returns>
    protected override async Task OnInitializedAsync()
    {
        try
        {
            AppData.radiationSourceTypes = await _masterData.GetMasterDataAsync<RadiationSourceType>("RadiationSourceType");
            listRadiationSourceType = AppData.radiationSourceTypes;
            //await jsRuntime.InvokeAsync<object>("ThisDataTablesAdd");
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
        }
    }

    /// <summary>
    /// Modal show RadiationSourceTypeUpdate
    /// </summary>
    /// <param name="id"></param>
    private async void RadiationSourceTypeUpdate(int id)
    {
        try
        {
            var respond = await _masterData.GetMasterDataAsyncByID<RadiationSourceType>("RadiationSourceTypeByID", id);

            if (string.IsNullOrEmpty(respond.Content))
            {
                editRadiationSourceType = respond;
                ModalRadiationSourceTypeEdit.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }

            //editRadiationSourceType = listRadiationSourceType.Find(r => r.RadiationSourceTypeID == id);
            //ModalRadiationSourceTypeEdit.Show();
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        } 
    }

    /// <summary>
    /// Modal show RadiationSourceTypeDelete
    /// </summary>
    /// <param name="id"></param>
    private async void RadiationSourceTypeDelete(int id)
    {
        try
        {
            var respond = await _masterData.GetMasterDataAsyncByID<RadiationSourceType>("RadiationSourceTypeByID", id);

            if (string.IsNullOrEmpty(respond.Content))
            {
                editRadiationSourceType = respond;
                ModalRadiationSourceTypeDelete.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }

            editRadiationSourceType = listRadiationSourceType.Find(r => r.RadiationSourceTypeID == id);
            ModalRadiationSourceTypeDelete.Show();

        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }  
    }

    /// <summary>
    /// SaveCreateRadiationSourceType
    /// </summary>
    private async Task SaveCreateRadiationSourceType()
    {
        try
        {
            var respond = await _masterData.PostMasterDataAsync("PostRadiationSourceType", addRadiationSourceType);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalRadiationSourceTypeCreate.Hide();
    }

    /// <summary>
    /// SaveEditRadiationSourceType
    /// </summary>
    private async Task SaveEditRadiationSourceType()
    {
        try
        {
            var respond = await _masterData.PutMasterDataAsync("PutRadiationSourceType", editRadiationSourceType, editRadiationSourceType.RadiationSourceTypeID);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalRadiationSourceTypeEdit.Hide();
    }

    /// <summary>
    /// SaveDeleteRadiationSourceType
    /// </summary>
    private async Task SaveDeleteRadiationSourceType()
    {
        try
        {
            var respond = await _masterData.DeleteMasterDataAsync<RadiationSourceType>("DeleteRadiationSourceType", editRadiationSourceType.RadiationSourceTypeID);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalRadiationSourceTypeDelete.Hide();
    }

    /// <summary>
    /// ClearCreateRadiationSourceType
    /// </summary>
    private void ClearCreateRadiationSourceType()
    {
        addRadiationSourceType = new RadiationSourceType();
    }

}
