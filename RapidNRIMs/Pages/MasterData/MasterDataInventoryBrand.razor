<!--ModalInventoryBrandDelete-->
<BSModal @ref="ModalInventoryBrandDelete">
    <BSModalHeader OnClick="@(() => ModalInventoryBrandDelete.Hide())">@AppData.LangResource[AppData.LanguageID, 370]</BSModalHeader>
    <BSModalBody>
         <div class="row">
            <div class="col-md-12">
                <div class="alert-modal-delete">
