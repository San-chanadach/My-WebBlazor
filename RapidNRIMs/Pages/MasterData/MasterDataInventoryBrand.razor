    <BSModalBody>

        <div class="row">
            <div class="col-md-12 alert-modal-logo">
                <img src="assets/images/img-common/delete_symbol.png" width="100" height="100" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p class="alert-modal">@RequertMessage</p>
            </div>
        </div>
        <button type="button" @onclick="@(() => ModalResponseError.Hide())" class="btn btn-success alert-modal-button">@AppData.LangResource[AppData.LanguageID, 330]</button>
    </BSModalBody>
</BSModal>

<!--ModalRespondSuccess-->
<BSModal Class="text-center alert-modal-body" @ref="ModalRespondSuccess" IsCentered="true" Size="Size.Large">
    <BSModalBody>
        <div class="row">
            <div class="col-md-12 alert-modal-logo">
                <img src="assets/images/img-common/tick_symbol.png" width="100" height="100" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h4 class="alert-modal">@RequertMessage</h4>
            </div>
        </div>
        <button type="button" @onclick="@(() => ModalRespondSuccess.Hide())" class="btn btn-success alert-modal-button">@AppData.LangResource[AppData.LanguageID, 330]</button>
    </BSModalBody>
</BSModal>



@code {

    /// <summary>
    /// InventoryBrand
    /// </summary>
    private List<InventoryBrand> listInventoryBrand = new List<InventoryBrand>();
    private InventoryBrand addInventoryBrand = new InventoryBrand();
    private InventoryBrand editInventoryBrand = new InventoryBrand();


    /// <summary>
    /// BSModal
    /// </summary>
    BSModal Load { get; set; }
    BSModal ModalInventoryBrandCreate { get; set; }
    BSModal ModalInventoryBrandEdit { get; set; }
    BSModal ModalInventoryBrandDelete { get; set; }
    BSModal ModalResponseError { get; set; }
    BSModal ModalRespondSuccess { get; set; }

    /// <summary>
    /// Variable
    /// </summary>
    private string RequertMessage;

    /// <summary>
    /// OnInitializedAsync
    /// </summary>
    /// <returns></returns>
    protected override async Task OnInitializedAsync()
    {
        try
        {
            AppData.inventoryBrands = await _masterData.GetMasterDataAsync<InventoryBrand>("InventoryBrand");
            listInventoryBrand = AppData.inventoryBrands;

        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
        }
        //await jsRuntime.InvokeAsync<object>("ThisDataTablesAdd");
    }

    /// <summary>
    /// Modal show InventoryBrandUpdate
    /// </summary>
    /// <param name="id"></param>
    private async void InventoryBrandUpdate(int id)
    {
        try
        {
            var respond = await _masterData.GetMasterDataAsyncByID<InventoryBrand>("InventoryBrandByID", id);

            if (string.IsNullOrEmpty(respond.Content))
            {
                editInventoryBrand = respond;
                ModalInventoryBrandEdit.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }

            //editInventoryBrand = listInventoryBrand.Find(b => b.InventoryBrandID == id);
            //ModalInventoryBrandEdit.Show();
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
    }

    /// <summary>
    /// Modal show InventoryBrandDelete
    /// </summary>
    /// <param name="id"></param>
    private async void InventoryBrandDelete(int id)
    {
        try
        {
            var respond = await _masterData.GetMasterDataAsyncByID<InventoryBrand>("InventoryBrandByID", id);

            if (string.IsNullOrEmpty(respond.Content))
            {
                editInventoryBrand = respond;
                ModalInventoryBrandDelete.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }

            //editInventoryBrand = listInventoryBrand.Find(b => b.InventoryBrandID == id);
            //ModalInventoryBrandDelete.Show();
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }   
    }

    /// <summary>
    /// SaveCreateInventoryBrand
    /// </summary>
    private async Task SaveCreateInventoryBrand()
    {
        try
        {
            var respond = await _masterData.PostMasterDataAsync("PostInventoryBrand", addInventoryBrand);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalInventoryBrandCreate.Hide();
    }

    /// <summary>
    /// SaveEditInventoryBrand
    /// </summary>
    private async Task SaveEditInventoryBrand()
    {
        try
        {
            var respond = await _masterData.PutMasterDataAsync("PutInventoryBrand", editInventoryBrand, editInventoryBrand.InventoryBrandID);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalInventoryBrandEdit.Hide();
    }

    /// <summary>
    /// SaveDeleteInventoryBrand
    /// </summary>
    private async Task SaveDeleteInventoryBrand()
    {
        try
        {
            var respond = await _masterData.DeleteMasterDataAsync<InventoryBrand>("DeleteInventoryBrand", editInventoryBrand.InventoryBrandID);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalInventoryBrandDelete.Hide();
    }

    /// <summary>
    /// ClearCreateInventoryBrand
    /// </summary>
    private void ClearCreateInventoryBrand()
    {
        addInventoryBrand = new InventoryBrand();
    }

}
