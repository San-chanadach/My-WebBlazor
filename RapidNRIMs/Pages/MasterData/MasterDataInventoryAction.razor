<!--ModalResponseError-->
<BSModal Class="text-center" @ref="ModalResponseError" IsCentered="true" Size="Size.Large">
    <BSModalBody>

        <div class="row">
            <div class="col-md-12 alert-modal-logo">
                <img src="assets/images/img-common/delete_symbol.png" width="100" height="100" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p class="alert-modal">@RequertMessage</p>
            </div>
        </div>
        <button type="button" @onclick="@(() => ModalResponseError.Hide())" class="btn btn-success alert-modal-button">@AppData.LangResource[AppData.LanguageID, 330]</button>
    </BSModalBody>
</BSModal>

<!--ModalRespondSuccess-->
<BSModal Class="text-center alert-modal-body" @ref="ModalRespondSuccess" IsCentered="true" Size="Size.Large">
    <BSModalBody>
        <div class="row">
            <div class="col-md-12 alert-modal-logo">
                <img src="assets/images/img-common/tick_symbol.png" width="100" height="100" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h4 class="alert-modal">@RequertMessage</h4>
            </div>
        </div>
        <button type="button" @onclick="@(() => ModalRespondSuccess.Hide())" class="btn btn-success alert-modal-button">@AppData.LangResource[AppData.LanguageID, 330]</button>
    </BSModalBody>
</BSModal>


@code {

    /// <summary>
    /// listInventoryAction
    /// </summary>
    private List<InventoryAction> listInventoryAction = new List<InventoryAction>();
    private InventoryAction addInventoryAction = new InventoryAction();
    private InventoryAction editInventoryAction = new InventoryAction();

    /// <summary>
    /// BSModal
    /// </summary>
    BSModal Load { get; set; }
    BSModal ModalInventoryActionCreate { get; set; }
    BSModal ModalInventoryActionEdit { get; set; }
    BSModal ModalInventoryActionDelete { get; set; }
    BSModal ModalResponseError { get; set; }
    BSModal ModalRespondSuccess { get; set; }

    /// <summary>
    /// Variable
    /// </summary>
    private string RequertMessage;

    /// <summary>
    /// OnInitializedAsync
    /// </summary>
    /// <returns></returns>
    protected override async Task OnInitializedAsync()
    {
        try
        {
            AppData.inventoryActions = await _masterData.GetMasterDataAsync<InventoryAction>("InventoryAction");
            listInventoryAction = AppData.inventoryActions;
            //await jsRuntime.InvokeAsync<object>("ThisDataTablesAdd");
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
        }
    }

    /// <summary>
    /// Modal show InventoryActionUpdate
    /// </summary>
    /// <param name="id"></param>
    private async void InventoryActionUpdate(int id)
    {
        try
        {
            var respond = await _masterData.GetMasterDataAsyncByID<InventoryAction>("InventoryActionByID", id);

            if (string.IsNullOrEmpty(respond.Content))
            {
                editInventoryAction = respond;
                ModalInventoryActionEdit.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }

            //editInventoryAction = listInventoryAction.Find(v => v.InventoryActionID == id);
            //ModalInventoryActionEdit.Show();
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
    }

    /// <summary>
    /// Modal show InventoryActionDelete
    /// </summary>
    /// <param name="id"></param>
    private async void InventoryActionDelete(int id)
    {
        try
        {
            var respond = await _masterData.GetMasterDataAsyncByID<InventoryAction>("InventoryActionByID", id);

            if (string.IsNullOrEmpty(respond.Content))
            {
                editInventoryAction = respond;
                ModalInventoryActionDelete.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
            //editInventoryAction = listInventoryAction.Find(v => v.InventoryActionID == id);
            //ModalInventoryActionDelete.Show();
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
    }

    /// <summary>
    /// SaveCreateInventoryAction
    /// </summary>
    private async Task SaveCreateInventoryAction()
    {
        try
        {
            var respond = await _masterData.PostMasterDataAsync("PostInventoryAction", addInventoryAction);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException =  respond.StatusMessage;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }

        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalInventoryActionCreate.Hide();
    }

    /// <summary>
    /// SaveEditInventoryAction
    /// </summary>
    private async Task SaveEditInventoryAction()
    {
        try
        {
            var respond = await _masterData.PutMasterDataAsync("PutInventoryAction", editInventoryAction, editInventoryAction.InventoryActionID);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalInventoryActionEdit.Hide();
    }

    /// <summary>
    /// SaveDeleteInventoryAction
    /// </summary>
    private async Task SaveDeleteInventoryAction()
    {
        try
        {
            var respond = await _masterData.DeleteMasterDataAsync<InventoryAction>("DeleteInventoryAction", editInventoryAction.InventoryActionID);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalInventoryActionDelete.Hide();
    }

    /// <summary>
    /// ClearCreateInventoryAction
    /// </summary>
    private void ClearCreateInventoryAction()
    {
        addInventoryAction= new InventoryAction();
    }

}
