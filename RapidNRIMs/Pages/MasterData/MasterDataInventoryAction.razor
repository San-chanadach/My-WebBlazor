<!--ModalInventoryActionDelete-->
<BSModal @ref="ModalInventoryActionDelete">
    <BSModalHeader OnClick="@(() => ModalInventoryActionDelete.Hide())">@AppData.LangResource[AppData.LanguageID, 361]</BSModalHeader>
    <BSModalBody>
        <div class="row">
            <div class="col-md-12">
                <div class="alert-modal-delete">
