@page "/MasterData/MasterDataInstrumentAgency"
@inject AppData AppData
@inject IToastService ToastService
@inject IJSRuntime jsRuntime
@inject IMasterData _masterData


@if (listInstrumentAgency == null)
{
    <div class="text-center mt-3">
        <span class="spinner-border text-warning spinner-border-sm " role="status" aria-hidden="true"
              style="font-size: 16pt; width: 36px; height: 36px; color: Gold " />
    </div>
    <div class="text-center pt-3" style=" font-size: 16pt">
        @AppData.LangResource[AppData.LanguageID, 325]
    </div>
}
else
{
    <div class="row margin-row-card">
        <div class="col-md-12">
            <div class="float-right" style="margin-bottom:10px; margin-top:10px">
                <button class="btn btn-warning" @onclick="@(() => ModalInstrumentAgencyCreate.Show())">
                    @AppData.LangResource[AppData.LanguageID, 331]
                </button>
            </div>
        </div>
    </div>

    <div class="row margin-row-card">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header"><i class="fas fa-table mr-1"></i>@AppData.LangResource[AppData.LanguageID, 332]</div>
                <div class="card-body">
                    <div class="scrollBar fixTableHead table-responsive scroll-inner" style="height: 700px;">
                        <table id="dataTable" class="table table-bordered table-striped text-center" width="100%">
                            <thead class="fixedthead">
                                <tr>
                                    <th class="alternateRow">@AppData.LangResource[AppData.LanguageID, 322]</th>
                                    <th class="alternateRow">@AppData.LangResource[AppData.LanguageID, 77]</th>
                                    <th class="alternateRow">@AppData.LangResource[AppData.LanguageID, 39]</th>
                                    <th class="alternateRow">@AppData.LangResource[AppData.LanguageID, 78]</th>
                                    <th class="alternateRow">@AppData.LangResource[AppData.LanguageID, 79]</th>
                                    <!--th class="alternateRow">@AppData.LangResource[AppData.LanguageID, 194]</th-->
                                    <th class="alternateRow">@AppData.LangResource[AppData.LanguageID, 145]</th>
                                    <th class="alternateRow">@AppData.LangResource[AppData.LanguageID, 146]</th>

                                </tr>
                            </thead>
                            <tbody class="scrollContent">
                                @{int id = 1;}
                                @foreach (var item in listInstrumentAgency)
                                {
                                    if (item.InstrumentAgencyName != "-" && item.IsActive != null && item.IsActive == true)
                                    {
                                        <tr>
                                            <td>@id</td>
                                            <td>@item.InstrumentAgencyName</td>
                                            <td>@item.InstrumentAgencyAddress</td>
                                            <td>@item.InstrumentAgencyTel</td>
                                            <td>@item.InstrumentAgencyEmail</td>
                                            <td>
                                                <button type="button" class="btn btn-warning" @onclick="@(() =>InstrumentAgencyUpdate(item.InstrumentAgencyID))">
                                                    <i class="fas fa-edit fa-sm"></i>
                                                </button>
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-danger" @onclick="@(() => InstrumentAgencyDelete(item.InstrumentAgencyID))">
                                                    <i class="fas fa-trash-alt fa-sm"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        id++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                 
                </div>
            </div>

        </div>
    </div>
}

