@code {

    /// <summary>
    /// listInstrumentAgency
    /// </summary>
    private List<InstrumentAgency> listInstrumentAgency = new List<InstrumentAgency>();
    private InstrumentAgency addInstrumentAgency = new InstrumentAgency();
    private InstrumentAgency editInstrumentAgency = new InstrumentAgency();

    /// <summary>
    /// BSModal
    /// </summary>
    BSModal Load { get; set; }
    BSModal ModalInstrumentAgencyCreate { get; set; }
    BSModal ModalInstrumentAgencyEdit { get; set; }
    BSModal ModalInstrumentAgencyDelete { get; set; }
    BSModal ModalResponseError { get; set; }
    BSModal ModalRespondSuccess { get; set; }

    BSModal ModalCheckBox { get; set; }


    /// <summary>
    /// Variable
    /// </summary>
    private string RequertMessage;

    /// <summary>
    /// OnInitializedAsync
    /// </summary>
    /// <returns></returns>
    protected override async Task OnInitializedAsync()
    {
        try
        {
            AppData.instrumentAgencies = await _masterData.GetMasterDataAsync<InstrumentAgency>("InstrumentAgency");
            listInstrumentAgency = AppData.instrumentAgencies;
            //await jsRuntime.InvokeAsync<object>("ResponsiveDataTables");
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }

    }

    /// <summary>
    /// Modal show InstrumentAgencyUpdate
    /// </summary>
    /// <param name="id"></param>
    private async void InstrumentAgencyUpdate(int? id)
    {
        try
        {
            var respond = await _masterData.GetMasterDataAsyncByID<InstrumentAgency>("InstrumentAgencyByID", id);
            if (respond != null)
            {
                if (string.IsNullOrEmpty(respond.Content))
                {
                    editInstrumentAgency = respond;
                    ModalInstrumentAgencyEdit.Show();
                }
                else
                {
                    var requertException = respond.Content;
                    RequertMessage = requertException;
                    ModalResponseError.Show();
                }
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
    }

    /// <summary>
    /// Modal show InstrumentAgencyDelete
    /// </summary>
    /// <param name="id"></param>
    private async void InstrumentAgencyDelete(int? id)
    {
        try
        {
            var respond = await _masterData.GetMasterDataAsyncByID<InstrumentAgency>("InstrumentAgencyByID", id);
            if (string.IsNullOrEmpty(respond.Content))
            {
                editInstrumentAgency = respond;
                ModalInstrumentAgencyDelete.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
    }

    /// <summary>
    /// SaveCreateInstrumentAgency
    /// </summary>
    private async Task SaveCreateInstrumentAgency()
    {
        try
        {
            var respond = await _masterData.PostMasterDataAsync("PostInstrumentAgency", addInstrumentAgency);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();                
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }

        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }

        ModalInstrumentAgencyCreate.Hide();
    }

    /// <summary>
    /// SaveEditInstrumentAgency
    /// </summary>
    private async Task SaveEditInstrumentAgency()
    {
        try
        {
            var respond = await _masterData.PutMasterDataAsync("PutInstrumentAgency", editInstrumentAgency, editInstrumentAgency.InstrumentAgencyID);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalInstrumentAgencyEdit.Hide();
    }

    /// <summary>
    /// SaveDeleteInstrumentAgency
    /// </summary>
    private async Task SaveDeleteInstrumentAgency()
    {
        try
        {
            var respond = await _masterData.DeleteMasterDataAsync<InstrumentAgency>("DeleteInstrumentAgency", editInstrumentAgency.InstrumentAgencyID);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        };
        ModalInstrumentAgencyDelete.Hide();
    }

    /// <summary>
    /// ClearCreateInstrumentAgency
    /// </summary>
    private void ClearCreateInstrumentAgency()
    {
        addInstrumentAgency = new InstrumentAgency();
    }

}
