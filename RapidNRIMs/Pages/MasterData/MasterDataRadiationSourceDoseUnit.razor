    <BSModalBody>

        <div class="row">
            <label class="col-12 col-md-4 col-lg-5 col-form-label" style="overflow: hidden; white-space: nowrap; text-overflow: ellipsis;">
                <span>@AppData.LangResource[AppData.LanguageID, 507]</span>
            </label>
