@code {
    /// <summary>
    /// RadiationSourceDoseUnit
    /// </summary>
    private List<RadiationDoseUnit> listRadiationSourceDoseUnit = new List<RadiationDoseUnit>();
    private RadiationDoseUnit addRadiationSourceDoseUnit = new RadiationDoseUnit();
    private RadiationDoseUnit editRadiationSourceDoseUnit = new RadiationDoseUnit();

    /// <summary>
    /// BSModal
    /// </summary>
    BSModal Load { get; set; }
    BSModal ModalResponseError { get; set; }
    BSModal ModalRespondSuccess { get; set; }
    BSModal ModalRadiationSourceDoseUnitCreate { get; set; }
    BSModal ModalRadiationSourceDoseUnitEdit { get; set; }
    BSModal ModalRadiationSourceDoseUnitDelete { get; set; }

    /// <summary>
    /// Variable
    /// </summary>
    private string RequertMessage;

    /// <summary>
    /// OnInitializedAsync
    /// </summary>
    /// <returns></returns>
    protected override async Task OnInitializedAsync()
    {
        try
        {
            AppData.radiationDoseUnits = await _masterData.GetMasterDataAsync<RadiationDoseUnit>("RadiationSourceDoseUnit");
            listRadiationSourceDoseUnit = AppData.radiationDoseUnits;
            ///await jsRuntime.InvokeAsync<object>("ResponsiveDataTables");
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
        }
    }


    /// <summary>
    /// Modal show RadiationSourceDoseUnitUpdate
    /// </summary>
    /// <param name="id"></param>
    private async Task RadiationSourceDoseUnitUpdate(int id)
    {
        try
        {
            var respond = await _masterData.GetMasterDataAsyncByID<RadiationDoseUnit>("RadiationSourceDoseUnitByID", id);
            if (string.IsNullOrEmpty(respond.Content))
            {
                editRadiationSourceDoseUnit = respond;
                ModalRadiationSourceDoseUnitEdit.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }

            //editInstrumentUnit = listInstrumentUnit.Find(u => u.InstrumentUnitID == id);
            ModalRadiationSourceDoseUnitEdit.Show();

        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
    }

    /// <summary>
    /// Modal show RadiationSourceDoseUnitDelete
    /// </summary>
    /// <param name="id"></param>
    private async Task RadiationSourceDoseUnitDelete(int id)
    {
        try
        {
            var respond = await _masterData.GetMasterDataAsyncByID<RadiationDoseUnit>("RadiationSourceDoseUnitByID", id);

            if (string.IsNullOrEmpty(respond.Content))
            {
                editRadiationSourceDoseUnit = respond;
                ModalRadiationSourceDoseUnitDelete.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }

            //editInstrumentUnit = listInstrumentUnit.Find(u => u.InstrumentUnitID == id);
            ModalRadiationSourceDoseUnitDelete.Show();
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
    }

    /// <summary>
    /// SaveCreateRadiationSourceDoseUnit
    /// </summary>
    private async Task SaveCreateRadiationSourceDoseUnit()
    {
        try
        {
            var respond = await _masterData.PostMasterDataAsync("PostRadiationSourceDoseUnit", addRadiationSourceDoseUnit);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }

        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalRadiationSourceDoseUnitCreate.Hide();
    }

    /// <summary>
    /// SaveEditRadiationSourceDoseUnit
    /// </summary>
    private async Task SaveEditRadiationSourceDoseUnit()
    {
        try
        {
            var respond = await _masterData.PutMasterDataAsync("PutRadiationSourceDoseUnit", editRadiationSourceDoseUnit, editRadiationSourceDoseUnit.RadiationDoseUnitID);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalRadiationSourceDoseUnitEdit.Hide();
    }

    /// <summary>
    /// SaveDeleteRadiationSourceDoseUnit
    /// </summary>
    private async Task SaveDeleteRadiationSourceDoseUnit()
    {
        try
        {
            var respond = await _masterData.DeleteMasterDataAsync<RadiationDoseUnit>("DeleteRadiationSourceDoseUnit", editRadiationSourceDoseUnit.RadiationDoseUnitID);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalRadiationSourceDoseUnitDelete.Hide();
    }

    /// <summary>
    /// ClearCreateRadiationSourceDoseUnit
    /// </summary>
    private void ClearCreateRadiationSourceDoseUnit()
    {
        addRadiationSourceDoseUnit = new RadiationDoseUnit();
    }

}
