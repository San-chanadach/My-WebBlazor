        }
        <button type="reset" class="btn btn-danger" @onclick="@(() => ModalRadiationSourceDoseUnitCreate.Hide())">@AppData.LangResource[AppData.LanguageID, 158]</button>
    </BSModalFooter>
</BSModal>

