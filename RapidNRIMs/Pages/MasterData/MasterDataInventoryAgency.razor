@code {

    /// <summary>
    /// InventoryAgency
    /// </summary>
    private List<InventoryAgency> listInventoryAgency = new List<InventoryAgency>();
    private InventoryAgency addInventoryAgency = new InventoryAgency();
    private InventoryAgency editInventoryAgency = new InventoryAgency();

    /// <summary>
    /// BSModal
    /// </summary>
    BSModal Load { get; set; }
    BSModal ModalInventoryAgencyCreate { get; set; }
    BSModal ModalInventoryAgencyEdit { get; set; }
    BSModal ModalInventoryAgencyDelete { get; set; }
    BSModal ModalResponseError { get; set; }
    BSModal ModalRespondSuccess { get; set; }

    /// <summary>
    /// Variable
    /// </summary>
    private string RequertMessage;

    /// <summary>
    /// OnInitializedAsync
    /// </summary>
    /// <returns></returns>
    protected override async Task OnInitializedAsync()
    {
        try
        {
            AppData.inventoryAgencys = await _masterData.GetMasterDataAsync<InventoryAgency>("InventoryAgency");
            listInventoryAgency = AppData.inventoryAgencys;
            //await jsRuntime.InvokeAsync<object>("ThisDataTablesAdd");
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
        }
    }

    /// <summary>
    /// Modal show InventoryAgencyUpdate
    /// </summary>
    /// <param name="id"></param>
    private async void InventoryAgencyUpdate(int id)
    {
        try
        {
            var respond = await _masterData.GetMasterDataAsyncByID<InventoryAgency>("InventoryAgencyByID", id);

            if (string.IsNullOrEmpty(respond.Content))
            {
                editInventoryAgency = respond;
                ModalInventoryAgencyEdit.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }

            //editInventoryAgency = listInventoryAgency.Find(a => a.InventoryAgencyID == id);
            //ModalInventoryAgencyEdit.Show();
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
    }

    /// <summary>
    /// Modal show InventoryAgencyDelete
    /// </summary>
    /// <param name="id"></param>
    private async void InventoryAgencyDelete(int id)
    {
        try
        {
            var respond = await _masterData.GetMasterDataAsyncByID<InventoryAgency>("InventoryAgencyByID", id);

            if (string.IsNullOrEmpty(respond.Content))
            {
                editInventoryAgency = respond;
                ModalInventoryAgencyDelete.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }

            //editInventoryAgency = listInventoryAgency.Find(a => a.InventoryAgencyID == id);
            //ModalInventoryAgencyDelete.Show();
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }  
    }

    /// <summary>
    /// SaveCreateInventoryAgency
    /// </summary>
    private async Task SaveCreateInventoryAgency()
    {
        try
        {
            var respond = await _masterData.PostMasterDataAsync("PostInventoryAgency", addInventoryAgency);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                AppData.inventoryAgencys = await _masterData.GetMasterDataAsync<InventoryAgency>("InventoryAgency");
                listInventoryAgency = AppData.inventoryAgencys;
                //await jsRuntime.InvokeAsync<object>("ThisDataTablesAdd");
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }

        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        StateHasChanged();
        ModalInventoryAgencyCreate.Hide();
    }

    /// <summary>
    /// SaveEditInventoryAgency
    /// </summary>
    private async Task SaveEditInventoryAgency()
    {
        try
        {
            var respond = await _masterData.PutMasterDataAsync("PutInventoryAgency", editInventoryAgency, editInventoryAgency.InventoryAgencyID);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                AppData.inventoryAgencys = await _masterData.GetMasterDataAsync<InventoryAgency>("InventoryAgency");
                 listInventoryAgency = AppData.inventoryAgencys;
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
           StateHasChanged();
        ModalInventoryAgencyEdit.Hide();
    }

    /// <summary>
    /// SaveDeleteInventoryAgency
    /// </summary>
    private async Task SaveDeleteInventoryAgency()
    {
        try
        {
            var respond = await _masterData.DeleteMasterDataAsync<InventoryAgency>("DeleteInventoryAgency", editInventoryAgency.InventoryAgencyID);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                 RequertMessage = requertException;
                 AppData.inventoryAgencys = await _masterData.GetMasterDataAsync<InventoryAgency>("InventoryAgency");
                 listInventoryAgency = AppData.inventoryAgencys;
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
           StateHasChanged();
        ModalInventoryAgencyDelete.Hide();
    }

    /// <summary>
    /// ClearCreateInventoryAgency
    /// </summary>
    private void ClearCreateInventoryAgency()
    {
        addInventoryAgency= new InventoryAgency();
    }

}
