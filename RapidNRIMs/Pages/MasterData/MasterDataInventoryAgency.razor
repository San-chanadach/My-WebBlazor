                    @AppData.LangResource[AppData.LanguageID, 362]
                </button>

            </div>
        </div>
    </div>

    <div class="row margin-row-card">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header"><i class="fas fa-table mr-1"></i>@AppData.LangResource[AppData.LanguageID, 363]</div>
                <div class="card-body">
                    <div class="scrollBar fixTableHead table-responsive scroll-inner" style="height:700px;">
                        <table id="dataTable" class="table table-bordered table-striped text-center" width="100%">
                            <thead class="fixedthead">
                                <tr>
                                    <th class="alternateRow">@AppData.LangResource[AppData.LanguageID, 322]</th>
                                    <th class="alternateRow">@AppData.LangResource[AppData.LanguageID, 201]</th>
                                    <th class="alternateRow">@AppData.LangResource[AppData.LanguageID, 202]</th>
                                    <th class="alternateRow">@AppData.LangResource[AppData.LanguageID, 203]</th>
                                    <th class="alternateRow">@AppData.LangResource[AppData.LanguageID, 204]</th>
                                    <th class="alternateRow">@AppData.LangResource[AppData.LanguageID, 364]</th>
                                    <th class="alternateRow">@AppData.LangResource[AppData.LanguageID, 145]</th>
                                    <th class="alternateRow">@AppData.LangResource[AppData.LanguageID, 146]</th>
                                </tr>
                            </thead>
                            <tbody class="scrollContent">
                                @{int id = 1;}
                                @foreach (var item in listInventoryAgency)
                                {
                                    @if(item.IsActive != null && item.IsActive == true)
                                    {
                                      <tr>
                                            <td>@id</td>
                                            <td>@item.InventoryAgencyName</td>
                                            <td>@item.InventoryAgencyAddress</td>
                                            <td>@item.InventoryAgencyTel</td>
                                            <td>@item.InventoryAgencyEmail</td>
                                            <td>@item.InventoryAgencyDescription</td>
                                            <td>
                                                <button type="button" class="btn btn-warning" @onclick="@(() => InventoryAgencyUpdate(item.InventoryAgencyID))">
                                                    <i class="fas fa-edit fa-sm"></i>
                                                </button>
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-danger" @onclick="@(() => InventoryAgencyDelete(item.InventoryAgencyID))">
                                                    <i class="fas fa-trash-alt fa-sm"></i>
                                                </button>
                                            </td>
                                      </tr>
                                      id++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

