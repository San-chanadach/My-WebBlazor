<BSModal Class="text-center alert-modal-body" @ref="ModalRespondSuccess" IsCentered="true" Size="Size.Large">
    <BSModalBody>
        <div class="row">
            <div class="col-md-12 alert-modal-logo">
                <img src="assets/images/img-common/tick_symbol.png" width="100" height="100" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h4 class="alert-modal">@RequertMessage</h4>
            </div>
        </div>
        <button type="button" @onclick="@(() => ModalRespondSuccess.Hide())" class="btn btn-success alert-modal-button">@AppData.LangResource[AppData.LanguageID, 330]</button>
    </BSModalBody>
</BSModal>



@code {

    /// <summary>
    /// InventoryLocation
    /// </summary>
    private List<InventoryLocation> listInventoryLocation = new List<InventoryLocation>();
    private InventoryLocation addInventoryLocation = new InventoryLocation();
    private InventoryLocation editInventoryLocation = new InventoryLocation();


    /// <summary>
    /// BSModal
    /// </summary>
    BSModal Load { get; set; }
    BSModal ModalResponseError { get; set; }
    BSModal ModalRespondSuccess { get; set; }
    BSModal ModalInventoryLocationCreate { get; set; }
    BSModal ModalInventoryLocationEdit { get; set; }
    BSModal ModalInventoryLocationDelete { get; set; }

    /// <summary>
    /// Variable
    /// </summary>
    private string RequertMessage;

    /// <summary>
    /// OnInitializedAsync
    /// </summary>
    /// <returns></returns>
    protected override async Task OnInitializedAsync()
    {
        try
        {
            AppData.inventoryLocations = await _masterData.GetMasterDataAsync<InventoryLocation>("InventoryLocation");
            listInventoryLocation = AppData.inventoryLocations;
            //await jsRuntime.InvokeAsync<object>("ThisDataTablesAdd");
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
        }
    }

    /// <summary>
    /// Modal show InventoryLocationUpdate
    /// </summary>
    /// <param name="id"></param>
    private async void InventoryLocationUpdate(int id)
    {
        try
        {
            var respond = await _masterData.GetMasterDataAsyncByID<InventoryLocation>("InventoryLocationByID", id);

            if (string.IsNullOrEmpty(respond.Content))
            {
                editInventoryLocation = respond;
                ModalInventoryLocationEdit.Show();
            }
            else
            {
               var requertException = respond.Content;
               RequertMessage = requertException;
               ModalResponseError.Show();
            }
            //editInventoryLocation = listInventoryLocation.Find(l => l.InventoryLocationID == id);
            //ModalInventoryLocationEdit.Show();
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }   
    }

    /// <summary>
    /// Modal show InventoryLocationDelete
    /// </summary>
    /// <param name="id"></param>
    private async void InventoryLocationDelete(int id)
    {
        try
        {
            var respond = await _masterData.GetMasterDataAsyncByID<InventoryLocation>("InventoryLocationByID", id);

            if (string.IsNullOrEmpty(respond.Content))
            {
                editInventoryLocation = respond;
                ModalInventoryLocationDelete.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }

            //editInventoryLocation = listInventoryLocation.Find(l => l.InventoryLocationID == id);
            //ModalInventoryLocationDelete.Show();
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }   
    }

    /// <summary>
    /// SaveCreateInventoryLocation
    /// </summary>
    private async Task SaveCreateInventoryLocation()
    {
        try
        {
            var respond = await _masterData.PostMasterDataAsync("PostInventoryLocation", addInventoryLocation);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }

        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalInventoryLocationCreate.Hide();
    }

    /// <summary>
    /// SaveEditInventoryLocation
    /// </summary>
    private async Task SaveEditInventoryLocation()
    {
        try
        {
            var respond = await _masterData.PutMasterDataAsync("PutInventoryLocation", editInventoryLocation, editInventoryLocation.InventoryLocationID);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalInventoryLocationEdit.Hide();
    }

    /// <summary>
    /// SaveDeleteInventoryLocation
    /// </summary>
    private async Task SaveDeleteInventoryLocation()
    {
        try
        {
            var respond = await _masterData.DeleteMasterDataAsync<InventoryLocation>("DeleteInventoryLocation", editInventoryLocation.InventoryLocationID);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalInventoryLocationDelete.Hide();
    }

    /// <summary>
    /// ClearCreateInventoryLocation
    /// </summary>
    private void ClearCreateInventoryLocation()
    {
        addInventoryLocation = new InventoryLocation();
    }

}
