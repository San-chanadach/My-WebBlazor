@code {

    /// <summary>
    /// InstrumentCatagory
    /// </summary>
    private List<InstrumentCatagory> listInstrumentCatagory = new List<InstrumentCatagory>();
    private InstrumentCatagory addInstrumentCatagory = new InstrumentCatagory();
    private InstrumentCatagory editInstrumentCatagory = new InstrumentCatagory();


    /// <summary>
    /// BSModal
    /// </summary>
    BSModal Load { get; set; }
    BSModal ModalResponseError { get; set; }
    BSModal ModalRespondSuccess { get; set; }
    BSModal ModalInstrumentCatagoryCreate { get; set; }
    BSModal ModalInstrumentCatagoryEdit { get; set; }
    BSModal ModalInstrumentCatagoryDelete { get; set; }

    /// <summary>
    /// Variable
    /// </summary>
    private string RequertMessage;
    bool loaded;

    /// <summary>
    /// OnInitializedAsync
    /// </summary>
    /// <returns></returns>
    protected override async Task OnInitializedAsync()
    {
        try
        {
            AppData.instrumentCatagories = await _masterData.GetMasterDataAsync<InstrumentCatagory>("InstrumentCatagory");
            listInstrumentCatagory = AppData.instrumentCatagories;
            //await jsRuntime.InvokeAsync<object>("ThisDataTablesAdd");
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;

        }
    }


    /// <summary>
    /// Modal show InstrumentCatagoryUpdate
    /// </summary>
    /// <param name="id"></param>
    private async void InstrumentCatagoryUpdate(int id)
    {
        try
        {
            var respond = await _masterData.GetMasterDataAsyncByID<InstrumentCatagory>("InstrumentCategoryByID", id);

            if (string.IsNullOrEmpty(respond.Content))
            {
                editInstrumentCatagory = respond;
                ModalInstrumentCatagoryEdit.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }  
    }

    /// <summary>
    /// Modal show InstrumentCatagoryDelete
    /// </summary>
    /// <param name="id"></param>
    private async Task InstrumentCatagoryDelete(int id)
    {
        try
        {
            var respond = await _masterData.GetMasterDataAsyncByID<InstrumentCatagory>("InstrumentCategoryByID", id);

            if (string.IsNullOrEmpty(respond.Content))
            {
                editInstrumentCatagory = respond;
                ModalInstrumentCatagoryDelete.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
    }

    /// <summary>
    /// SaveCreateInstrumentCatagory
    /// </summary>
    private async Task SaveCreateInstrumentCatagory()
    {
        try
        {
            var respond = await _masterData.PostMasterDataAsync("PostInstrumentCategory", addInstrumentCatagory);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }

        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalInstrumentCatagoryCreate.Hide();
    }

    /// <summary>
    /// SaveEditInstrumentCatagory
    /// </summary>
    private async Task SaveEditInstrumentCatagory()
    {
        try
        {
            var respond = await _masterData.PutMasterDataAsync("PutInstrumentCategory", editInstrumentCatagory, editInstrumentCatagory.InstrumentCatagoryID);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalInstrumentCatagoryEdit.Hide();
    }

    /// <summary>
    /// SaveDeleteInstrumentCatagory
    /// </summary>
    private async Task SaveDeleteInstrumentCatagory()
    {
        try
        {
            var respond = await _masterData.DeleteMasterDataAsync<InstrumentCatagory>("DeleteInstrumentCategory", editInstrumentCatagory.InstrumentCatagoryID);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalInstrumentCatagoryDelete.Hide();
    }

    /// <summary>
    /// ClearCreateInstrumentCatagory
    /// </summary>
    private void ClearCreateInstrumentBrand()
    {
        addInstrumentCatagory = new InstrumentCatagory();
    }

}
