<!--ModalInventoryStockTypeDelete-->
<BSModal @ref="ModalInventoryStockTypeDelete">
    <BSModalHeader OnClick="@(() => ModalInventoryStockTypeDelete.Hide())">@AppData.LangResource[AppData.LanguageID, 374]</BSModalHeader>
    <BSModalBody>

