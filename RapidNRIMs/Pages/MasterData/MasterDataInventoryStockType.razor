@code {

    /// <summary>
    /// InventoryStockType
    /// </summary>
    private List<InventoryStockType> listInventoryStockType = new List<InventoryStockType>();
    private InventoryStockType addInventoryStockType = new InventoryStockType();
    private InventoryStockType editInventoryStockType = new InventoryStockType();


    /// <summary>
    /// BSModal
    /// </summary>
    BSModal Load { get; set; }
    BSModal ModalResponseError { get; set; }
    BSModal ModalRespondSuccess { get; set; }
    BSModal ModalInventoryStockTypeCreate { get; set; }
    BSModal ModalInventoryStockTypeEdit { get; set; }
    BSModal ModalInventoryStockTypeDelete { get; set; }

    /// <summary>
    /// Variable
    /// </summary>
    private string RequertMessage;

    /// <summary>
    /// OnInitializedAsync
    /// </summary>
    /// <returns></returns>
    protected override async Task OnInitializedAsync()
    {
        try
        {
            AppData.inventoryStockTypes = await _masterData.GetMasterDataAsync<InventoryStockType>("InventoryStockType");
            listInventoryStockType = AppData.inventoryStockTypes;
            //await jsRuntime.InvokeAsync<object>("ThisDataTablesAdd");
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;

        }
    }

    /// <summary>
    /// Modal show InventoryStockTypeUpdate
    /// </summary>
    /// <param name="id"></param>
    private async void InventoryStockTypeUpdate(int id)
    {
        try
        {
            var respond = await _masterData.GetMasterDataAsyncByID<InventoryStockType>("InventoryStockTypeByID", id);

            if (string.IsNullOrEmpty(respond.Content))
            {
                editInventoryStockType = respond;
                ModalInventoryStockTypeEdit.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }

            // editInventoryStockType = listInventoryStockType.Find(t => t.InventoryStockTypeID == id);
            // ModalInventoryStockTypeEdit.Show(); 
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
    }

    /// <summary>
    /// Modal show InventoryStockTypeDelete
    /// </summary>
    /// <param name="id"></param>
    private async void InventoryStockTypeDelete(int id)
    {
        try
        {
            var respond = await _masterData.GetMasterDataAsyncByID<InventoryStockType>("InventoryStockTypeByID", id);

            if (string.IsNullOrEmpty(respond.Content))
            {
                editInventoryStockType = respond;
                ModalInventoryStockTypeDelete.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }

            editInventoryStockType = listInventoryStockType.Find(t => t.InventoryStockTypeID == id);
            ModalInventoryStockTypeDelete.Show();
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
    }

    /// <summary>
    /// SaveCreateInventoryStockType
    /// </summary>
    private async Task SaveCreateInventoryStockType()
    {
        try
        {
            var respond = await _masterData.PostMasterDataAsync("PostInventoryStockType", addInventoryStockType);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalInventoryStockTypeCreate.Hide();
    }

    /// <summary>
    /// SaveEditInventoryStockType
    /// </summary>
    private async Task SaveEditInventoryStockType()
    {
        try
        {
            var respond = await _masterData.PutMasterDataAsync("PutInventoryStockType", editInventoryStockType, editInventoryStockType.InventoryStockTypeID);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalInventoryStockTypeEdit.Hide();
    }

    /// <summary>
    /// SaveDeleteInventoryStockType
    /// </summary>
    private async Task SaveDeleteInventoryStockType()
    {
        try
        {
            var respond = await _masterData.DeleteMasterDataAsync<InventoryStockType>("DeleteInventoryStockType", editInventoryStockType.InventoryStockTypeID);
            if (!string.IsNullOrEmpty(respond.ToString()))
            {
                var requertException = respond.StatusMessage;
                RequertMessage = requertException;
                await OnInitializedAsync();
                ModalRespondSuccess.Show();
            }
            else
            {
                var requertException = respond.Content;
                RequertMessage = requertException;
                ModalResponseError.Show();
            }
        }
        catch (Exception e)
        {
            var val = e.Message;
            RequertMessage = val;
            ModalResponseError.Show();
        }
        ModalInventoryStockTypeDelete.Hide();
    }

    /// <summary>
    /// ClearCreateInventoryStockType
    /// </summary>
    private void ClearCreateInventoryStockType()
    {
        addInventoryStockType = new InventoryStockType();
    }

}
